<%= form_for @listing do |f| %>
  <div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %></div>

  <div><%= f.label :body, "Description" %><br />
  <%= f.text_area :body, autofocus: true %></div>

  <div><%= f.label :price %><br />
  <%= f.text_field :price %></div>

  <%= f.hidden_field :user_id, :value => current_user.id %><br />

  <%= f.fields_for :photos, @listing.photos.new do |ff| %>
    <%= ff.file_field :pic %>
  <% end %>

  <div><%= f.submit "Submit Listing" %></div>
<% end %>
